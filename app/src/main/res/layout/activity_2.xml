<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookAye">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BE4545"
        android:clickable="false"
        tools:context=".BookAye">


        <Button
            android:id="@+id/button3"
            android:layout_width="218dp"
            android:layout_height="83dp"
            android:layout_marginTop="44dp"
            android:text="@string/photo"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="398dp"
            android:layout_height="391dp"
            android:background="#00FCF2F2"
            android:contentDescription="@string/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bookayeicon" />

        <Button
            android:id="@+id/button"
            android:layout_width="218dp"
            android:layout_height="83dp"
            android:layout_marginTop="120dp"
            android:text="@string/scan"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="293dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:inputType="textShortMessage|textLongMessage|textCapCharacters"
            android:selectAllOnFocus="true"
            android:text="@string/input"
            android:textColor="#DD050505"
            android:imeOptions="actionDone"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:autofillHints="" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>